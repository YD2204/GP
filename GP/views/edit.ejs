<html>
    <body>
        <h1>Welcome, <%= user.name %></h1>
        <hr />
        <p>You logged in through <b><%= user.type %></b>, user ID is <%= user.id %></p>
        <form action="/update" method="POST" enctype="multipart/form-data">
            Date: <input type="date" name="date" value="<%= booking.date %>" required><br />
            Time:
            <select name="time" required>
                <option value="10:00" <%= booking.time === "10:00" ? "selected" : "" %>>10:00</option>
                <option value="12:00" <%= booking.time === "12:00" ? "selected" : "" %>>12:00</option>
                <option value="14:00" <%= booking.time === "14:00" ? "selected" : "" %>>14:00</option>
                <option value="16:00" <%= booking.time === "16:00" ? "selected" : "" %>>16:00</option>
                <option value="18:00" <%= booking.time === "18:00" ? "selected" : "" %>>18:00</option>
                <option value="20:00" <%= booking.time === "20:00" ? "selected" : "" %>>20:00</option>
            </select>
            <br />
            Table:
            <select name="tableNumber" required>
                <% for (var table of availableTables) { %>
                    <option value="<%= table %>" <%= booking.tableNumber === table ? "selected" : "" %>>
                        Table <%= table %>
                    </option>
                <% } %>
            </select>
            <br />
            Phone Number: <input type="text" name="phone_number" value="<%= booking.phone_number %>" required><br />
            <input type="hidden" name="_id" value="<%= booking._id %>">
            <input type="submit" value="Update Booking">
        </form>
        <a href="/content">Cancel</a>
    </body>
</html>
